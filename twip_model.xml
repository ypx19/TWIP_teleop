<mujoco model="Two Wheel Inverse Pendulum">
    <compiler angle="radian" coordinate="local" inertiafromgeom="true"/>
    
    <option timestep="0.002" integrator="RK4" gravity="0 0 -9.81"/>
    
    <visual>
        <map fogstart="3" fogend="5" znear="0.05"/>
        <quality shadowsize="2048"/>
        <scale framelength="0.3" framewidth="0.02" contactwidth="0.05" contactheight="0.02"/>
    </visual>
    
    <asset>
        <texture name="grid" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 .2 .3" width="300" height="300"/>
        <texture name="wheel_pattern" type="2d" builtin="checker" rgb1="0.8 0.3 0.3" rgb2="0.9 0.9 0.9" width="8" height="8"/>
        <material name="grid" texture="grid" texrepeat="5 5" specular="0.7" shininess="0.1" reflectance="0.1"/>
        <material name="body" rgba="0.3 0.6 0.8 1" specular="0.8" shininess="0.5"/>
        <material name="wheel" texture="wheel_pattern" texrepeat="4 1" specular="0.8" shininess="0.5"/>
    </asset>
    
    <default>
        <geom contype="1" conaffinity="1" friction="0.8 0.05 0.05" density="1000" solref="0.01 1" solimp="0.99 0.99 0.01"/>
        <joint damping="0.01"/>
        <motor ctrlrange="-10 10" gear="50" ctrllimited="true"/>
    </default>
    
    <worldbody>
        <!-- Ground -->
        <geom name="floor" pos="0 0 0" size="10 10 0.1" type="plane" material="grid" friction="1.0 0.05 0.05" solref="0.01 1" solimp="0.99 0.99 0.01"/>
        
        <!-- Light sources -->
        <light name="light1" pos="2 2 4" dir="-1 -1 -2" diffuse="0.8 0.8 0.8"/>
        <light name="light2" pos="-2 2 4" dir="1 -1 -2" diffuse="0.6 0.6 0.6"/>
        
        <!-- Camera -->
        <camera name="main_cam" pos="3 3 2" xyaxes="-1 1 0 -0.3 -0.3 1"/>
        
        <!-- 车身 -->
        <body name="cart" pos="0 0 0.1">
            <!-- 添加自由关节，使车身能够在地面上移动 -->
            <joint name="cart_joint" type="free"/>
            <!-- 主体 -->
            <geom name="body" type="box" size="0.15 0.05 0.3" pos="0 0 0.3" material="body"/>
            <inertial pos="0 0 0.15" mass="0.5" diaginertia="0.05 0.05 0.02"/>
            
            <!-- 左轮 -->
            <body name="left_wheel" pos="-0.2 0 0">
                <joint name="left_wheel_joint" type="hinge" axis="1 0 0" pos="0 0 0"/>
                <geom name="left_wheel_geom" type="cylinder" size="0.1 0.01" euler="0 1.5708 0" material="wheel" friction="1.0 0.05 0.05" solref="0.01 1" solimp="0.99 0.99 0.01"/>
                <!-- 添加轮辐标记，使旋转更明显 -->
                <geom name="left_wheel_spoke1" type="box" size="0.08 0.005 0.005" pos="0 0 0" euler="0 1.5708 0" rgba="0.1 0.1 0.1 1"/>
                <geom name="left_wheel_spoke2" type="box" size="0.08 0.005 0.005" pos="0 0 0" euler="0 1.5708 1.5708" rgba="0.1 0.1 0.1 1"/>
                <inertial pos="0 0 0" mass="0.5" diaginertia="0.01 0.005 0.01"/>
            </body>
            
            <!-- 右轮 -->
            <body name="right_wheel" pos="0.2 0 0">
                <joint name="right_wheel_joint" type="hinge" axis="1 0 0" pos="0 0 0"/>
                <geom name="right_wheel_geom" type="cylinder" size="0.1 0.01" euler="0 1.5708 0" material="wheel" friction="1.0 0.05 0.05" solref="0.01 1" solimp="0.99 0.99 0.01"/>
                <!-- 添加轮辐标记，使旋转更明显 -->
                <geom name="right_wheel_spoke1" type="box" size="0.08 0.005 0.005" pos="0 0 0" euler="0 1.5708 0" rgba="0.1 0.1 0.1 1"/>
                <geom name="right_wheel_spoke2" type="box" size="0.08 0.005 0.005" pos="0 0 0" euler="0 1.5708 1.5708" rgba="0.1 0.1 0.1 1"/>
                <inertial pos="0 0 0" mass="0.5" diaginertia="0.01 0.005 0.01"/>
            </body>
        </body>
        <!-- 平衡车结构：车身有自由关节，轮子作为车身的子体 -->
    </worldbody>
    
    <actuator>
        <!-- Motors for the wheels -->
        <motor name="left_motor" joint="left_wheel_joint" gear="2.5" ctrlrange="-5 5"/>
        <motor name="right_motor" joint="right_wheel_joint" gear="2.5" ctrlrange="-5 5"/>
    </actuator>
    
    <sensor>
        <!-- Position sensors -->
        <jointpos name="left_wheel_pos" joint="left_wheel_joint"/>
        <jointpos name="right_wheel_pos" joint="right_wheel_joint"/>
        
        <!-- Velocity sensors -->
        <jointvel name="left_wheel_vel" joint="left_wheel_joint"/>
        <jointvel name="right_wheel_vel" joint="right_wheel_joint"/>
    </sensor>
</mujoco>